<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/thm_yellow_1</item>
        <item name="colorPrimaryDark">@color/thm_blue_dark1</item>
        <item name="colorAccent">@color/thm_blue1</item>
        <item name="android:textColorPrimary">@color/thm_blue2</item>

        <item name="android:windowBackground">@color/white</item>
        <!--<item name="android:windowBackground">@drawable/bg_intro</item>-->
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:editTextColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorHint">@color/thm_text_hint</item>

        <item name="android:fontFamily" tools:targetApi="21">serif</item>
        <item name="android:typeface">serif</item>


        <item name="android:buttonStyle" tools:targetApi="21">@style/myButtonStyle</item>
        <item name="android:textViewStyle" tools:targetApi="21">@style/myTextViewStyle</item>
        <item name="editTextStyle" tools:targetApi="21">@style/myEditTextStyle</item>

    </style>

    <style name="myButtonStyle" parent="android:Widget.Button" tools:targetApi="21">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="21">serif</item>
    </style>

    <style name="myTextViewStyle" parent="android:Widget.TextView" tools:targetApi="21">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="21">serif</item>
    </style>

    <style name="myEditTextStyle" parent="android:Widget.EditText" tools:targetApi="21">
        <item name="android:typeface">serif</item>
        <item name="android:fontFamily" tools:targetApi="21">serif</item>
        <item name="android:textColorHint">@color/thm_text_hint</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textCursorDrawable">@drawable/edttxv_custom_cursor_color</item>
    </style>
    <style name="spinner_style" parent="Widget.AppCompat.Spinner">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/transparent</item>
    </style>
    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:layout_height">@dimen/button_height_xlarge</item>
    </style>

</resources>
