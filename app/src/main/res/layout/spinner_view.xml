<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/awesomeSpinner_hintButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        android:ellipsize="end"
        android:gravity="start|bottom"
        android:lines="1"
        android:paddingBottom="@dimen/edttext_bottom_padding"
        android:paddingStart="0dp"
        android:textAllCaps="false"
        android:textColor="@color/thm_text_hint"
        android:textSize="@dimen/fontsize_mini" />

    <ImageView
        android:id="@+id/awesomeSpinner_downArrow"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:paddingBottom="7dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_arrow_down" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignBottom="@+id/awesomeSpinner_hintButton"
        android:background="?android:attr/listDivider" />


    <ast.billmanagment.mybills.Utils.HintSpinner
        android:id="@+id/awesomeSpinner_spinner"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignBottom="@+id/awesomeSpinner_hintButton"
        android:spinnerMode="dropdown" />

</merge>