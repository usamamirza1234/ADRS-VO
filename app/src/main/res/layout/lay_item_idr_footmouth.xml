<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"

        android:background="@drawable/shp_rect_white_gray_stoke"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Sr."
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                android:paddingTop="2dp"
                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_sr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Proposed Regulatory Reform "
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="2dp"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/lay_issues_list_txv_brmi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Specific Rule/Policy/Law to be changed (Eliminated or Amended)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_totalreforms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Proposed Change (Elimination or Amendment)"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_implemented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Approving Authority for Proposed Change"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_partitallyimplemented"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Department/Agency Comments/Feedback"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_underimplementation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Status"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_furtherdelibrations"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Timeline"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_disagreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="2dp"
                android:paddingStart="2dp"
                android:paddingEnd="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="3dp"
                    android:text="Evidnece"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini"
                    android:textStyle="bold" />

                <View

                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"

                android:paddingBottom="2dp">

                <TextView
                    android:id="@+id/lay_issues_list_txv_doesnotpertain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="4dp"
                    android:paddingBottom="5dp"
                    android:text="Desc"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_mini" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>