<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shp_rect_rounded_white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/hometollbar"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">
        <!--BUTTON-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="100">


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_totaldept_off"
                >

                <TextView
                    android:id="@+id/frg_punjab_business_txv_alldept"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"


                    android:text="View"
                    android:textColor="@color/white_1"
                    android:textSize="8dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_mapped_on">

                <TextView
                    android:id="@+id/frg_punjab_business_txv_rlcoautomated"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Diseases"
                    android:textColor="@color/white_1"
                    android:textSize="6dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_species_off"
                >

                <TextView
                    android:id="@+id/frg_punjab_business_txv_rlcomapped"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Species"
                    android:textColor="@color/black"
                    android:textSize="7dp"
                    android:textStyle="bold" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_origin_off"
                >

                <TextView
                    android:id="@+id/frg_punjab_business_txv_alldept"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"


                    android:text="Origin"
                    android:textColor="@color/red"
                    android:textSize="8dp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_origin_off">

                <TextView
                    android:id="@+id/frg_punjab_business_txv_rlcoautomated"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"
                    android:text="District"
                    android:textColor="@color/red"
                    android:textSize="8dp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:layout_weight="15"
                android:gravity="center"
                android:background="@drawable/chb_btn_origin_off"
                >

                <TextView
                    android:id="@+id/frg_punjab_business_txv_rlcomapped"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"

                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Tehsil"
                    android:textColor="@color/red"
                    android:textSize="8dp"
                    android:textStyle="bold" />

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="10"
                android:gravity="center"

                >
                <ast.adrs.vo.MainAuxilaries.CircleImageView
                    android:layout_width="40dp"

                    android:layout_height="50dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="0dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/calendaricon" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@color/red"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerInParent="true"

                    android:padding="10dp"
                    android:text="Immediate Diseases Reports - IDR"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </RelativeLayout>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="horizontal"
            android:weightSum="100">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_centerInParent="false"
                    android:layout_marginLeft="0dp"
                    android:padding="10dp"
                    android:text="All Diseases, All Species, All Sources, All District"
                    android:textColor="@color/black"
                    android:textSize="@dimen/fontsize_tiny"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:gravity="center"

                >
                <ast.adrs.vo.MainAuxilaries.CircleImageView
                    android:layout_width="35dp"

                    android:layout_height="50dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="0dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/ic_chart" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_margin="0dp"
                android:layout_weight="0"
                android:gravity="center"

                >
                <ast.adrs.vo.MainAuxilaries.CircleImageView
                    android:layout_width="35dp"

                    android:layout_height="50dp"
                    android:layout_alignParentEnd="false"
                    android:layout_centerVertical="false"
                    android:layout_marginEnd="0dp"
                    android:elevation="2dp"
                    android:scaleType="centerCrop"

                    android:src="@drawable/ic_map" />
            </RelativeLayout>




        </LinearLayout>





    </LinearLayout>

</LinearLayout>