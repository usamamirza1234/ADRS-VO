<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--BUTTON-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal"
        android:weightSum="100">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="33"
            android:gravity="center"
            android:background="@drawable/chb_btn_totaldept_off"
            >

            <TextView
                android:id="@+id/frg_punjab_business_txv_alldept"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"

                android:gravity="center"
                android:padding="10dp"


                android:text="View"
                android:textColor="@color/white_1"
                android:textSize="@dimen/fontsize_tiny"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="33"
            android:gravity="center"
            android:background="@drawable/chb_btn_mapped_off">

            <TextView
                android:id="@+id/frg_punjab_business_txv_rlcoautomated"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"

                android:gravity="center"
                android:padding="10dp"
                android:text="Diseases"
                android:textColor="@color/white_1"
                android:textSize="@dimen/fontsize_tiny"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            android:layout_weight="33"
            android:gravity="center"
            android:background="@drawable/chb_btn_licenses_off"
            >

            <TextView
                android:id="@+id/frg_punjab_business_txv_rlcomapped"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"

                android:gravity="center"
                android:padding="10dp"
                android:text="Species"
                android:textColor="@color/white_1"
                android:textSize="@dimen/fontsize_tiny"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>



</LinearLayout>