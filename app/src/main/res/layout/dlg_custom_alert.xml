<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@color/thm_bg_loader"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_edit_text"

        android:orientation="vertical">

        <LinearLayout
            android:visibility="gone"
            android:background="@drawable/shp_rect_rounded_top_blue_medium"
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:visibility="gone"
                android:id="@+id/dlg_cstm_alrt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"

                android:textColor="@color/white"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/dlg_cstm_alrt_text_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginBottom="20dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="@dimen/fontsize_small"
            android:textStyle="normal" />

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/green_govt" />

        <LinearLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height_large">

            <Button
                android:layout_height="match_parent"
                android:id="@+id/dlg_cstm_alrt_btn_cancel"
                android:layout_width="wrap_content"
                android:layout_margin="2dp"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/buttonview_font_margin_top"
                android:layout_marginBottom="@dimen/buttonview_font_margin_bottom"
                android:layout_weight="1"
                android:background="@drawable/shp_rect_rounded_red_stoke_new"
                android:gravity="center"
                android:paddingTop="@dimen/buttonview_font_padding_top"
                android:paddingBottom="@dimen/buttonview_font_padding_bottom"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@color/app_red_color"
                android:textSize="@dimen/fontsize_mini"
                android:visibility="visible" />

            <View

                android:id="@+id/dlg_cstm_alrt_separator"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/green_govt"
                android:visibility="gone" />

            <Button
                android:layout_margin="2dp"
                android:id="@+id/dlg_cstm_alrt_btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/buttonview_font_margin_top"
                android:layout_marginBottom="@dimen/buttonview_font_margin_bottom"
                android:paddingTop="@dimen/buttonview_font_padding_top"
                android:paddingBottom="@dimen/buttonview_font_padding_bottom"
                android:layout_weight="1"
                android:gravity="center"
                android:textAlignment="center"
                android:background="@drawable/shp_stoke_thm_green"
                android:text="OK"
                android:textColor="@color/thm_green_graph_indicator"
                android:textStyle="bold"
                android:textSize="@dimen/fontsize_mini" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>